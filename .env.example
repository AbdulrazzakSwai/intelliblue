# IntelliBlue SOC Configuration
# Copy this file to .env and update values

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://intelliblue:intelliblue@localhost:5432/intelliblue

# JWT Security (CHANGE THIS IN PRODUCTION)
SECRET_KEY=change-me-to-a-long-random-string-in-production

# File Storage
UPLOAD_DIR=./uploads

# Local LLM (optional - system works without it)
# Download a GGUF model first: bash scripts/download_model.sh
LLM_MODEL_PATH=./models/model.gguf
LLM_N_GPU_LAYERS=0
LLM_N_CTX=4096
LLM_MAX_TOKENS=1024

# Configuration Files
SIEM_MAPPING_PATH=./config/siem_mapping.json
CORRELATION_CONFIG_PATH=./config/correlation_config.json

# Debug Mode (set to True for development)
DEBUG=False
